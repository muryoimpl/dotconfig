{
  "rubydef": {
    "prefix": "def",
    "body": [
      "def ${1}",
      "\t$0",
      "end"
    ],
    "description": "Ruby's def"
  },
  "privatedef": {
    "prefix": "privatedef",
    "body": [
      "private\n",
      "def ${1:method}",
      "\t$0",
      "end"
    ],
    "description": "private def"
  },
  "rubyclass": {
    "prefix": "class",
    "body": [
      "class ${1}",
      "\t$0",
      "end"
    ],
    "description": "Ruby's class"
  },
  "rubymodule": {
    "prefix": "module",
    "body": [
      "class ${1}",
      "\t$0",
      "end"
    ],
    "description": "Ruby's module"
  },
  "oneline scope": {
    "prefix": "scope",
    "body": [
      "scope :${1:name}, -> { ${2:query} }"
    ],
    "description": "oneline scope"
  },
  "oneline scope with args": {
    "prefix": "scopearg",
    "body": [
      "scope :${1:name}, ->(${2:arg}) { $0 }"
    ],
    "description": "oneline scope with arg"
  },
  "RSpec.describe": {
    "prefix": "rspec",
    "body": [
      "require \"rails_helper\"\n",
      "describe \"${1}\", type: ${2} do",
      "\t$0",
      "end"
    ],
    "description": "RSpec describe"
  },
  "RSpec describe": {
    "prefix": "describespec",
    "body": [
      "describe \"${1}\" do",
      "\t$0",
      "end"
    ],
    "description": "RSpec describe"
  },
  "RSpec context": {
    "prefix": "contextspec",
    "body": [
      "context \"${1}\" do",
      "\t$0",
      "end"
    ],
    "description": "RSpec context"
  },
  "RSpec let!": {
    "prefix": "let!",
    "body": [
      "let!(:${1}) do",
      "\t$0",
      "end"
    ],
    "description": "RSpec let!"
  },
  "RSpec let! do": {
    "prefix": "let!",
    "body": [
      "let!(:${1}) { $0 }"
    ],
    "description": "RSpec let! do"
  }
}
